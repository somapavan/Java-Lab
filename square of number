import java.util.*;
public class square {
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter n value which is the size of sqr matrix");
        int n=sc.nextInt();
        int sum=0;
        if(n<1)
        {
            System.out.println("Invalid");
        }
        else{
            while(n!=0)
            {
                sum=sum+n*n;
                n--;
            }
        }
        System.out.println("The number of squares in the matrix is: " +sum);
    }
}
